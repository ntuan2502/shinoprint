{"components/chiara/products-by-category-sorting-tabs/section":"{{!\n    Params:\n    - index\n    - url\n    - position\n    - banner_image_domain\n    - banner_image_path\n    - banner_heading\n    - banner_button\n    - heading\n    - limit\n}}\n{{#block (concat \"chiara-products-by-category\" index)}}\n<div class=\"chiara-section chiara-section--productsByCategory chiara-section--productsByCategory-{{position}}\">\n    <div class=\"chiara-productsByCategory chiara-productsByCategory--{{position}}\">\n        <div class=\"chiara-productsByCategory-banner\">\n            <div class=\"chiara-productsByCategory-banner-img\"><a href=\"#\"><img class=\"lazyload\" data-sizes=\"auto\" src=\"{{cdn 'assets/img/loading.svg'}}\" data-src=\"{{banner_image_domain}}{{banner_image_path}}\" alt=\"{{banner_heading}}\"></a></div>\n            <div class=\"chiara-productsByCategory-banner-content\">\n                <h5 class=\"chiara-productsByCategory-banner-title\">{{{banner_heading}}}</h5>\n                <p class=\"chiara-productsByCategory-banner-button\"><a class=\"button button--large\" href=\"#\">{{banner_button}} &nbsp;<i class=\"fas fa-chevron-right\"></i></a></p>\n            </div>\n        </div>\n        <div class=\"chiara-productsByCategory-productsContainer\" data-products-by-category-sorting-tabs>\n            <h3 class=\"chiara-productsByCategory-heading\">{{heading}}</h3>\n            <ul class=\"tabs\" data-tab>\n                <li class=\"tab is-active\">\n                    <a class=\"tab-title\" href=\"#tab-productsByCategory-new-{{index}}\">New</a>\n                </li>\n                <li class=\"tab\">\n                    <a class=\"tab-title\" href=\"#tab-productsByCategory-top-{{index}}\">Best Sellers</a>\n                </li>\n                <li class=\"tab\">\n                    <a class=\"tab-title\" href=\"#tab-productsByCategory-featured-{{index}}\">Featured</a>\n                </li>\n                <li class=\"tab\">\n                    <a class=\"tab-title\" href=\"#tab-productsByCategory-rating-{{index}}\">Top Reviewed</a>\n                </li>\n            </ul>\n            <div class=\"tabs-contents\">\n                <div class=\"tab-content is-active\" id=\"tab-productsByCategory-new-{{index}}\" data-url=\"{{url}}?sort=newest&amp;limit={{limit}}\">\n                    <img class=\"img-loading\" src=\"{{cdn 'img/loading.svg'}}\" alt=\"loading\" />\n                </div>\n                <div class=\"tab-content\" id=\"tab-productsByCategory-top-{{index}}\" data-url=\"{{url}}?sort=bestselling&amp;limit={{limit}}\">\n                    <img class=\"img-loading\" src=\"{{cdn 'img/loading.svg'}}\" alt=\"loading\" />\n                </div>\n                <div class=\"tab-content\" id=\"tab-productsByCategory-featured-{{index}}\" data-url=\"{{url}}?sort=featured&amp;limit={{limit}}\">\n                    <img class=\"img-loading\" src=\"{{cdn 'img/loading.svg'}}\" alt=\"loading\" />\n                </div>\n                <div class=\"tab-content\" id=\"tab-productsByCategory-rating-{{index}}\" data-url=\"{{url}}?sort=avgcustomerreview&amp;limit={{limit}}\">\n                    <img class=\"img-loading\" src=\"{{cdn 'img/loading.svg'}}\" alt=\"loading\" />\n                </div>\n            </div>\n        </div>\n    </div>\n</div>\n{{/block}}\n"}
